# API Keys - Set at least one of these
# Google API key for Gemini models
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API key (fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini model selection
GEMINI_MODEL=Gemini 2.5 Pro

# Gemini temperature setting
GEMINI_TEMPERATURE=0.7

# API Security
API_KEY=your_secure_api_key_here  # For production

# Environment (development, production)
ENVIRONMENT=development

# Server port (default: 8000)
PORT=8000

# Next.js specific
NEXT_PUBLIC_API_URL=http://localhost:8000

# Optional Supabase credentials (for database integration)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Optional n8n webhook URL (for workflow automation)
N8N_WEBHOOK_URL=your_n8n_webhook_url

# Optional feature flags
ENABLE_SOCIAL_MEDIA_POSTING=false
ENABLE_ANALYTICS=true